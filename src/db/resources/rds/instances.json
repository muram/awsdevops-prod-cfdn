{
  "DBInstance1": {
    "Type": "AWS::RDS::DBInstance",
    "Properties": {
      "DBClusterIdentifier": {
        "Ref": "DBCluster"
      },
      "DBInstanceClass": {
        "Ref": "ParamDatabaseInstanceType"
      },
      "DBSubnetGroupName": {
        "Ref": "DBSubnetGroup"
      },
      "Engine": "aurora-mysql",
      "MonitoringInterval": "30",
      "MonitoringRoleArn": {
        "Fn::GetAtt": ["DBMonitoringRole", "Arn"]
      },
      "PubliclyAccessible": false,
      "Tags": [{
          "Key": "Name",
          "Value": {
            "Fn::Sub": "${AWS::StackName}-aurora-master"
          }
        },
        {
          "Key": "Owner",
          "Value": {
            "Ref": "ParamAuthorName"
          }
        }
      ]
    }
  },
  "DBInstance2": {
    "Type": "AWS::RDS::DBInstance",
    "Condition": "CreateDBReadReplica",
    "Properties": {
      "DBClusterIdentifier": {
        "Ref": "DBCluster"
      },
      "DBInstanceClass": {
        "Ref": "ParamDatabaseInstanceType"
      },
      "DBSubnetGroupName": {
        "Ref": "DBSubnetGroup"
      },
      "Engine": "aurora-mysql",
      "MonitoringInterval": "30",
      "MonitoringRoleArn": {
        "Fn::GetAtt": ["DBMonitoringRole", "Arn"]
      },
      "PubliclyAccessible": false,
      "Tags": [{
          "Key": "Name",
          "Value": {
            "Fn::Sub": "${AWS::StackName}-aurora-replica"
          }
        },
        {
          "Key": "Owner",
          "Value": {
            "Ref": "ParamAuthorName"
          }
        }
      ]
    }
  }
}