{
	"ECRRepository": {
		"Type": "AWS::ECR::Repository",
		"Properties": {
			"RepositoryName": {
				"Fn::Sub": "${AWS::StackName}/api"
			},
			"RepositoryPolicyText": {
				"Version": "2008-10-17",
				"Statement": [
					{
						"Sid": "AllowPushPull",
						"Effect": "Allow",
						"Principal": {
							"AWS": {
								"Fn::Join": [
									"",
									[
										"arn:aws:iam::",
										{ "Ref": "AWS::AccountId" },
										":",
										{ "Ref": "ParamAdminUser" }
									]
								]
							}
						},
						"Action": [
							"ecr:GetDownloadUrlForLayer",
							"ecr:BatchGetImage",
							"ecr:BatchCheckLayerAvailability",
							"ecr:PutImage",
							"ecr:InitiateLayerUpload",
							"ecr:UploadLayerPart",
							"ecr:CompleteLayerUpload"
						]
					}
				]
			},
			"Tags": [
				{
					"Key": "Name",
					"Value": {
						"Fn::Sub": "${AWS::StackName}/api"
					}
				},
				{
					"Key": "Owner",
					"Value": { "Ref": "ParamAuthorName" }
				}
			]
		}
	}
}
