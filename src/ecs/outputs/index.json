{
	"ClusterName": {
		"Description": "The name of the ECS cluster",
		"Value": {
			"Ref": "ECSCluster"
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"ClusterName"
					]
				]
			}
		}
	},
	"InternalUrl": {
		"Description": "The url of the internal load balancer",
		"Value": {
			"Fn::Join": [
				"",
				[
					"http://",
					{
						"Fn::GetAtt": ["PrivateLoadBalancer", "DNSName"]
					}
				]
			]
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"InternalUrl"
					]
				]
			}
		}
	},
	"ExternalUrl": {
		"Description": "The url of the external load balancer",
		"Value": {
			"Fn::Join": [
				"",
				[
					"http://",
					{
						"Fn::GetAtt": ["PublicLoadBalancer", "DNSName"]
					}
				]
			]
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"ExternalUrl"
					]
				]
			}
		}
	},
	"ECSRole": {
		"Description": "The ARN of the ECS role",
		"Value": {
			"Fn::GetAtt": ["ECSRole", "Arn"]
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"ECSRole"
					]
				]
			}
		}
	},
	"PublicListenerForward": {
		"Description": "The ARN of the public load balancer's Listener on port 80",
		"Value": {
			"Ref": "PublicLoadBalancerListenerForward"
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"PublicListenerForward"
					]
				]
			}
		}
	},
	"PublicListenerRedirect": {
		"Description": "The ARN of the public load balancer's Listener on port 443",
		"Value": {
			"Ref": "PublicLoadBalancerListenerRedirect"
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"PublicListenerRedirect"
					]
				]
			}
		}
	},
	"PrivateListener": {
		"Description": "The ARN of the public load balancer's Listener",
		"Value": {
			"Ref": "PrivateLoadBalancerListener"
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"PrivateListener"
					]
				]
			}
		}
	},
	"EcsHostSecurityGroup": {
		"Description": "A security group used to allow containers to receive traffic",
		"Value": {
			"Ref": "EcsHostSecurityGroup"
		},
		"Export": {
			"Name": {
				"Fn::Join": [
					":",
					[
						{
							"Ref": "AWS::StackName"
						},
						"EcsHostSecurityGroup"
					]
				]
			}
		}
	}
}
